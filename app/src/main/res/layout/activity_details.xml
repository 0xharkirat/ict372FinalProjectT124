<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">


    <Button
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="49dp"
        android:backgroundTint="#0C0C0C"
        android:text=" +"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="393dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:text="Quantity"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="406dp" />


    <Button
        android:id="@+id/button7"
        android:layout_width="72dp"
        android:layout_height="47dp"
        android:backgroundTint="#131212"
        android:text=" - "
        android:textSize="24sp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="397dp" />


    <EditText
        android:id="@+id/editTextText"
        android:layout_width="31dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text=" 2 "
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="400dp" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="307dp"
        android:layout_height="54dp"
        android:text="Apple MacBook Air 13-inch with M3 Chip, 8-core GPU, 256GB/8GB (Midnight)[2024]"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="466dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="419dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165"
        app:srcCompat="@drawable/apple_macbook_air" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1799"
        android:textColor="#DB3022"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="533dp" />


    <Button
        android:id="@+id/button10"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:backgroundTint="#DB3022"
        android:text="Add To Cart"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="620dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
