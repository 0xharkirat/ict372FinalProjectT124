<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">


    <Button
        android:id="@+id/button4"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F6F5F5"
        android:text="&lt;"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="386dp"
        android:layout_height="275dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="361dp"
            android:layout_height="234dp"
            app:srcCompat="@drawable/apple_macbook_air" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703">


        <TextView
            android:id="@+id/productTitle"
            android:layout_width="380dp"
            android:layout_height="54dp"
            android:text="Apple MacBook Air 13-inch with M3 Chip, 8-core GPU, 256GB/8GB (Midnight)[2024]"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785">


        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1799"
            android:textColor="#DB3022"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="396dp"
        android:layout_height="69dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="Quantity"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="406dp" />


        <Button
            android:id="@+id/decrementButton"
            android:layout_width="72dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:backgroundTint="#131212"
            android:text=" - "
            android:textSize="24sp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="397dp" />


        <EditText
            android:id="@+id/quantityText"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="  1"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="400dp" />


        <Button
            android:id="@+id/incrementButton"
            android:layout_width="70dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:backgroundTint="#0C0C0C"
            android:text=" +"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="286dp"
            tools:layout_editor_absoluteY="393dp" />
    </LinearLayout>


    <Button
        android:id="@+id/cartButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#DB3022"
        android:text="Add To Cart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />


</androidx.constraintlayout.widget.ConstraintLayout>
